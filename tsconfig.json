{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"],
  "files": ["./src/mod.ts"]
}
